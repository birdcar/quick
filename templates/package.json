{
  "name": "{{ name }}",
  "author": "{{ authorName }} <{{ authorEmail }}>",
  "version": "0.1.0",
  "description": "The {{ name }} action",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ githubHandle }}/actions.git",
    "keywords": [
      "GitHub",
      "Actions",
      "JavaScript"
    ]
  },
  "license": "MIT",
  "dependencies": {
    {% if not composite %}
    "@actions/artifact": "^1.0.0",
    "@actions/cache": "^2.0.0",
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.1",
    "@actions/glob": "^0.2.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^1.7.2"
    {% endif %}
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.0.0",
    "jest": "^27.2.5"
  }
}
